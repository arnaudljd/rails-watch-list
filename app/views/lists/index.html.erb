<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url "cinema.jpg" %>');">
  <div class="container">
    <h1 class="text-white"><strong>Save any kind of movies</strong></h1>
  </div>
</div>

<div class="container">
  <div class="row align-items-center my-4">
    <div class="col-6">
      <h4>My list</h4>
    </div>
    <div class="col-6 text-end">
      <%= link_to "Add a list", new_list_path, class: "btn btn-success text-white" %>
    </div>
  </div>

  <div class="row">
    <div class="cards my-4">
      <% @lists.each do |list| %>
          <%= link_to list.name, list_path(list), class: "card card-title text-decoration-none text-white col-12" %>
      <% end %>
    </div>
  </div>
</div>
