<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url "cinema.jpg" %>');">
  <div class="container">
    <h1 class="text-white"><strong>Save any kind of movies</strong></h1>
  </div>
</div>

<div class="container">
  <div class="my-4">
    <div class="d-flex inline-block justify-content-between mb-3", style="margin-bottom: inherit;">
      <h4>My list</h4>
      <%= link_to "Add a list", new_list_path, class: "btn btn-danger text-white" %>
    </div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card shadow mb-5 bg-body rounded-4 d-flex justify-content-center">
          <%= link_to list.name, list_path(list), class: "card-title text-decoration-none text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
