<h1><%= @list.name %> movies</h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <%#= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete } %>
      <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete }, class: 'text-danger' %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list) %> |
  <%= link_to "Back to lists", lists_path %>
</div>
